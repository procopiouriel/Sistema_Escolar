        <Label Content="Nome Fantasia:" HorizontalAlignment="Left" Margin="201,177,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="0.471,1.66" FontSize="16"/>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="247,208,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="0.471,1.66" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="302,153,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="179"/>
        <TextBox HorizontalAlignment="Center" Margin="0,184,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="162"/>
        <TextBox HorizontalAlignment="Left" Margin="292,217,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="189"/>
